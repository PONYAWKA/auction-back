generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-arm64-openssl-1.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Sex {
  MALE
  FEMALE
}

model User {
  id           Int      @id @unique @default(autoincrement())
  email        String   @unique()
  passwordHash String
  firstName    String
  lastName     String
  birth        DateTime
  location     String
  sex          Sex

  auctions Auction[]
  bits     Bit[]
  Token    Token?
}

model Token {
  refreshToken String
  user         User   @relation(fields: [userId], references: [id])
  userId       Int    @id @unique
}

model Auction {
  id           Int      @id @unique @default(autoincrement())
  paintingName String
  createdAt    DateTime
  category     String
  minBit       Float
  maxBit       Float
  startPrice   Float
  startDate    DateTime
  endDate      DateTime
  image        String

  User          User @relation(fields: [creatorUserId], references: [id])
  creatorUserId Int

  bits Bit[]
}

model Bit {
  id     Int   @id @unique @default(autoincrement())
  bitSum Float

  bitAuction Int
  User       User    @relation(fields: [bitOwner], references: [id])
  bitOwner   Int
  Auction    Auction @relation(fields: [auctionId], references: [id])
  auctionId  Int
}
